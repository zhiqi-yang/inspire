{
  "compilerOptions": {

    "target": "es6",
    "strict": true,
    "module": "esnext",

    "jsx": "react-jsx",
    "moduleResolution": "node",

    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",

    "allowJs": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src/**/*", "test/util/*"],

  "exclude": ["node_modules"]
}
